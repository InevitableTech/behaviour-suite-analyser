{
    "name": "forceedge01/bdd-analyser",
    "description": "Analyse bdd scripts and find issues with detailed information and how to address these issues to prolong the longevitiy of your behaviour suite",
    "type": "library",
    "license": "MIT",
    "keywords": ["cli","command-line", "test-automation", "behaviour-tests", "behaviour-suite", "bdd-analysis", "lint", "static-analysis", "behaviour-scripts"],
    "autoload": {
        "psr-4": {
            "Forceedge01\\BDDStaticAnalyser\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Abdul Wahhab Qureshi (inevitabletech.uk)",
            "email": "its.inevitable@hotmail.com",
            "homepage": "https://inevitabletech.uk",
            "role": "lead dev"
        }
    ],
    "require": {
        "php": "^7.1",
        "symfony/console": "^4.0",
        "forceedge01/bdd-analyser-rules": "^1.0",
        "symfony/yaml": "^4.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^7"
    },
    "bin": ["bin/bdd-analyser"],
    "extra": {
        "scripts": {
            "post-install-cmd": [
                "chmod +x bin/bdd-analyser"
            ]
        }
    }
}
